  <div class="row">
    <div class="col">
      <ul class="tabs">
        <li class="tab"><a class="active" href="#login">LogIn</a></li>
        <li class="tab"><a href="#registration">Sign Up</a></li>
      </ul>
    </div>
    <div id="login" class="col">
        <h3>Log In</h3>
         <form action="/add" method="POST">  
                <div class="input__field">
                    <label for="email">Enter Email</label>
                    <input type="email" name="email" class="validate" placeholder="Email" id="email" required>
                </div>

                <div class="input__field">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="validate" placeholder="password" id="password" required>
                </div>
                <div class="input__field">
                    <button class="btn" type="submit">Log In</button>
                </div>
            </form>
    </div>
    <div id="registration" class="col">
                <h3>Sign Up</h3>
         <form action="/add" method="POST">  
                <div class="input__field">
                    <label for="remail">Enter Email</label>
                    <input type="remail" name="email" class="validate" placeholder="Email" id="email" required>
                </div>

                <div class="input__field">
                    <label for="rpassword">Password</label>
                    <input type="rpassword" name="password" class="validate" placeholder="password" id="password" required>
                </div>
                <div class="input__field">
                    <button class="btn" type="submit">Sign Up</button>
                </div>
            </form>
    </div>
  </div>